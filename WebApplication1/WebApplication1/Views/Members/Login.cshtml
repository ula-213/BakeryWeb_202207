@model WebApplication1.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <div class="form">
        <ul class="tab-group">
            <li class="tab">
                <a href="@Url.Action("Register", "Members")">註冊</a>
            </li>
            <li class="tab active">
                <a href="@Url.Action("Login", "Members")">登入</a>
            </li>
        </ul>


        <!--帳號-->
        <div class="form-group">

            @Html.LabelFor(model => model.Account, new { @class = "label_01" })
            @Html.TextBoxFor(model => model.Account, new { @class = "form-control", placeholder = "輸入帳號" })
            @Html.ValidationMessageFor(model => model.Account, null, new { @class = "label label-danger" })
        </div>
        <!--密碼-->
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "label_01" })
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "輸入密碼" })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
        </div>
        <!--忘記密碼-->
        <div class="form-group" style="padding-right:10px;text-align:right; margin-top:50px;">
            <a href="@Url.Action("Login", "Members")">忘記密碼?</a>
        </div>
        <div class="form-group" style="color:red;">@Html.ValidationSummary()</div>
        <!--繳交-->
        <div class="form-group">
            <input class="btn_01" type="submit" value="登入" />
        </div>


    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
